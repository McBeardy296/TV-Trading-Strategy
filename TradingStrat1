//@version=5
strategy("Conservative Strategy", overlay=true, precision=2, default_qty_type = strategy.percent_of_equity, currency = "GBP", initial_capital = 100, default_qty_value = 50, commission_type = strategy.commission.percent, commission_value = 0, pyramiding = 0, max_labels_count = 500, max_lines_count = 500, max_boxes_count = 500, max_bars_back = 500)

// BackTest Filter
useDateFilter = input.bool(true, title="Begin Backtest at Start Date",
     group="Backtest Time Period")
backtestStartDate = input.time(timestamp("1 Jan 2021"), 
     title="Start Date", group="Backtest Time Period",
     tooltip="This start date is in the time zone of the exchange " + 
     "where the chart's instrument trades. It doesn't use the time " + 
     "zone of the chart or of your computer.")


// Stop Loss and Take Profit
EnableSLTP = input.bool(true, title='Use Take Profit and Stop Loss', group = 'Stop Loss and Take Profit Settings', tooltip = 'Check if you wish to use Stop Loss and Take Profit protection on your trades')
SLTPStrat = input.string(defval="ATR", title='Take Profit/Stop Loss Strategy', options=["None", "Percentage", "ATR"], group = 'Stop Loss and Take Profit Settings') //  Strategy Selection Dropdown

// INPUTS
// Percentage Calculations
TP = input.float(4, title = 'Take Profit Percentage', minval = 0, step = 0.1) / 100
SL = input.float(4, title = 'Stop Loss Percentage', minval = 0, step = 0.1) / 100

//TPPerc = TP / 100
//SLPerc = SL / 100

// ATR Inputs
atrLength = input.int(title='ATR Length', defval=14, minval=1)
useStructure = input(title='Use Structure?', defval=true)
lookback = input.int(title='How Far To Look Back For High/Lows', defval=14, minval=1)
atrStopMultiplier = input.float(title='ATR Multiplier', defval=1.0, minval=0.1)

// Swing High and Swing Low Inputs
barsback        =   input       (7,     title='Bars back to check for a swing',                                             group= 'Swing High/Low Settings')


// CALCULATIONS
// Percentage Calculations
BuyTPPerc = strategy.position_avg_price * (1 + TP)
BuySLPerc = strategy.position_avg_price * (1 - SL)
SellTPPerc = strategy.position_avg_price * (1 - TP)
SellSLPerc = strategy.position_avg_price * (1 + SL)


// ATR Calculations
TPSLatr = ta.atr(atrLength)
lowestLow = ta.lowest(low, lookback)
highestHigh = ta.highest(high, lookback)
longStop = (useStructure ? lowestLow : close) - TPSLatr * atrStopMultiplier
shortStop = (useStructure ? highestHigh : close) + TPSLatr * atrStopMultiplier

BuyTPATR = shortStop
BuySLATR = longStop

SellTPATR = longStop
SellSLATR = shortStop

