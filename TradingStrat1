//TRENDMAGIC
src = input(close, 'SRC', group = 'Trend Line Settings')
period = input(20, 'CCI period', group = 'Trend Line Settings')
coeff = input(1, 'ATR Multiplier', group = 'Trend Line Settings')
AP = input(5, 'ATR Period', group = 'Trend Line Settings')
ATR = ta.sma(ta.tr, AP)

upT = low - ATR * coeff
downT = high + ATR * coeff
MagicTrend = 0.0
MagicTrend := ta.cci(src, period) >= 0 ? upT < nz(MagicTrend[1]) ? nz(MagicTrend[1]) : upT : downT > nz(MagicTrend[1]) ? nz(MagicTrend[1]) : downT
color1 = ta.cci(src, period) >= 0 ? color.green : #FC0400
plot(MagicTrend, title='MagicTrend', color=color1, linewidth=3)

//var bool lineIsGreen = false
//var bool lineIsRed = false

lineIsGreen = ta.cci(src, period) >= 0
lineIsRed = ta.cci(src, period) < 0




//plotshape(lineIsGreen, 'line is green', shape.cross, location.top, color.green)
//plotshape(lineIsRed, 'line is red', shape.cross, location.top, color.red)

// TRADING CONDITIONS
// Set Stop Loss and Take Profit Variables based on strategy selected
BuyNoTP = 0
BuyNoSL = 0
SellNoTP = 0
SellNoSL = 0

BuyTP = SLTPStrat == "None" ? BuyNoTP : SLTPStrat == "Percentage" ? BuyTPPerc : SLTPStrat == "ATR" ? BuyTPATR : na
BuySL = SLTPStrat == "None" ? BuyNoSL : SLTPStrat == "Percentage" ? BuySLPerc : SLTPStrat == "ATR" ? BuySLATR : na
SellTP = SLTPStrat == "None" ? SellNoTP : SLTPStrat == "Percentage" ? SellTPPerc : SLTPStrat == "ATR" ? SellTPATR : na
SellSL = SLTPStrat == "None" ? SellNoSL : SLTPStrat == "Percentage" ? SellSLPerc : SLTPStrat == "ATR" ? SellSLATR : na

//plot(BuyTP, 'Buy TP', color.green, linewidth = 1)
